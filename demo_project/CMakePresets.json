{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "generator": "Ninja"
        },
        {
            "name": "x64",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "win",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "lin",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "cxx",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_SCAN_FOR_MODULES": "OFF"
            }
        },
        {
            "name": "msvc-fix",
            "hidden": true,
            "environment": {
                "VSLANG": "1033"
            }
        },
        {
            "name": "vcpkg",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_INSTALL_OPTIONS": "--no-print-usage;--clean-after-build"
            },
            "environment": {
                "VCPKG_KEEP_ENV_VARS": "PATH"
            }
        },
        {
            "name": "win-x64",
            "hidden": true,
            "inherits": [
                "base",
                "x64",
                "win",
                "cxx",
                "msvc-fix",
                "vcpkg"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-static",
                "CRT_LINKAGE_STATIC": "YES"
            }
        },
        {
            "name": "win-x64-debug",
            "inherits": [
                "win-x64",
                "debug"
            ]
        },
        {
            "name": "win-x64-release",
            "inherits": [
                "win-x64",
                "release"
            ]
        },
        {
            "name": "lin-x64",
            "hidden": true,
            "inherits": [
                "base",
                "x64",
                "lin",
                "cxx",
                "vcpkg"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-linux"
            }
        },
        {
            "name": "lin-x64-debug",
            "inherits": [
                "lin-x64",
                "debug"
            ]
        },
        {
            "name": "lin-x64-release",
            "inherits": [
                "lin-x64",
                "release"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "win-x64-debug",
            "configurePreset": "win-x64-debug"
        },
        {
            "name": "win-x64-release",
            "configurePreset": "win-x64-release"
        },
        {
            "name": "lin-x64-debug",
            "configurePreset": "lin-x64-debug"
        },
        {
            "name": "lin-x64-release",
            "configurePreset": "lin-x64-release"
        }
    ]
}
